@page "/chathistory"
@using Microsoft.JSInterop;
@using System.Text.Json;
@using OpenAI_API.Chat;
@inject NavigationManager NavigationManager

<MudText Typo="Typo.h3">
    Chat History
</MudText>

@if(_response != null)
{
    <MudDataGrid Items="@_response.ChatHistories">
        <Columns>
            <PropertyColumn Property="x => x.Summary" Title="Summary" />
            <PropertyColumn Property="x => x.CreatedOn" Title="Created" />
            <TemplateColumn CellClass="d-flex justify-end">
                <CellTemplate>
                     <MudStack Row>
                        <MudButton Size="@Size.Small" Variant="@Variant.Filled" OnClick="() => NavigateToHome(context.Item.Id)" Color="@Color.Primary">View Chat</MudButton>
                    </MudStack>
                </CellTemplate>
            </TemplateColumn>
        </Columns>
        <NoRecordsContent>
            <MudAlert Severity="Severity.Info">
                No history has been recorded yet.
            </MudAlert>
        </NoRecordsContent>
    </MudDataGrid>
}