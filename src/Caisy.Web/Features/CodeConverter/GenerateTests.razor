<MudGrid>
    <MudItem xs="12">
        <MudButtonGroup Color="Color.Primary" Variant="Variant.Outlined">
            <MudButton Disabled="IsDisabled" ButtonType="ButtonType.Button" OnClick="OnClickAsync" StartIcon="@Icons.Material.Outlined.Build">
                Generate Tests
            </MudButton>
            <MudMenu Icon="@Icons.Material.Filled.ArrowDropDown">
                @foreach (var item in Enum.GetValues<GenerateTestsCommand.TestFramework>())
                {
                    <MudMenuItem OnClick="() => SetTestingFramework(item)">
                        <MudStack Row="true" Spacing="1">
                            @if (_model.Framework == item)
                            {
                                <MudIcon Icon="@Icons.Material.Filled.Check"></MudIcon>
                            }
                            @item.GetDisplayName()
                        </MudStack>
                    </MudMenuItem>
                }
            </MudMenu>
        </MudButtonGroup>
    </MudItem>
</MudGrid>
