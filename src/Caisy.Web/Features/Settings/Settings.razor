@page "/settings"

<MudGrid>
    <MudItem xs="12">
        <MudPaper Class="pa-4">
            <MudText Typo="Typo.h4">
                Settings
            </MudText>
            <MudText>
                Manage various settings across the entire application.
            </MudText>

            ﻿<EditForm OnValidSubmit="OnValidSubmitAsync" Model="_model">
                <DataAnnotationsValidator />
                <MudGrid>
                    <MudItem xs="3">
                        <MudSwitch @bind-Checked=_model.PrefersDarkMode UnCheckedColor="Color.Warning" Color=Color.Dark ThumbIcon="@GetThemeIcon()">Light / Dark Mode</MudSwitch>
                    </MudItem>
                    <MudItem xs="12">
                        <MudTextField Label="Api Key" @bind-Value="_model.ApiKey" For="() => _model.ApiKey" />
                    </MudItem>
                    <MudItem xs="12">
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Secondary" StartIcon="@Icons.Material.Outlined.Check">
                            Save
                        </MudButton>
                    </MudItem>
                </MudGrid>
            </EditForm>
        </MudPaper>
    </MudItem>
</MudGrid>
