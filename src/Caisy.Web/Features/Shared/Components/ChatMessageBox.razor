<MudPaper Class="pa-4">
    <MudGrid Class="chat-message-box">
        <MudItem xs="12">
            <AdaptiveTextArea Value="@Message" ValueChanged="MessageChanged" Placeholder="Enter/Paste your code..." />
        </MudItem>
        <MudItem xs="12">
            <MudToolBar Class="gap-1" DisableGutters="true">
                @ToolbarContent
                <MudSpacer />
                <MudButton Disabled="@Loading" ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Outlined.Refresh">
                    @MessageButtonText
                </MudButton>
            </MudToolBar>
        </MudItem>
    </MudGrid>
</MudPaper>
