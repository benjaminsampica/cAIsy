<MudDrawer Open="Open" Anchor="Anchor.Left" Elevation="1" Variant="@DrawerVariant.Persistent" OpenChanged="OpenChanged" ClipMode="DrawerClipMode.Always">
    <MudDrawerHeader>
        <MudText Typo="Typo.h4">
            Options
        </MudText>
    </MudDrawerHeader>
    <MudContainer Class="px-2">
        @ChildContent
    </MudContainer>
</MudDrawer>

@code {
    [Parameter] public bool Open { get; set; }
    [Parameter] public EventCallback<bool> OpenChanged { get; set; }
    [Parameter, EditorRequired] public RenderFragment ChildContent { get; set; } = null!;
}