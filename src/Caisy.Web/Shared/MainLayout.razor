@inherits LayoutComponentBase

<main>
    <article class="content px-4">
        @Body
    </article>

    <MudAppBar Elevation=3 Bottom=true Class="d-flex align-center">
        <MudText Typo="Typo.h6">
            Built During <MudIconButton Icon="@Icons.Material.Outlined.LocalPizza" Href="https://github.com/benjaminsampica" Color="Color.Tertiary" Size="Size.Large"></MudIconButton> Casey's DevJam!
        </MudText>
    </MudAppBar>
</main>

<MudThemeProvider @ref=_mudThemeProvider IsDarkMode=_isDarkMode />
<MudSnackbarProvider/>

@code {
    private MudThemeProvider? _mudThemeProvider;
    private bool _isDarkMode;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _isDarkMode = await _mudThemeProvider!.GetSystemPreference();
            StateHasChanged();
        }
    }
}